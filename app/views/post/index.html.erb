<body>
	<div class="title">
		Affichage de la liste des posts
	</div>	
	<ul>
		<% @posts.each do |p| %>
			<div class="listingURl">
				<li><%= link_to "#{p.title}", consult_path(p.id), :id => p.id, :method => "get"%></li>
			</div>	
			<div class="actions">
   				<%= button_to "Supprimer", delete_path(p.id), :id => p.id , :confirm => 'Confirmer la suppression', :method => :delete %>
   			</div>
		<% end %>
	</ul>
	<div class="title">
		Creation d'un nouveau post.
	</div>

	<form action= <%= posts_new_path %> method="GET">
		<div class = "actions"><input type="submit" name="CreationPostButton" value="Add New Post" <br></div>
	</form> 

</body>
