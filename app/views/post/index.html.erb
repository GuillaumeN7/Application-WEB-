<div class="search">
	<fieldset>
		<legend> Recherche de message(s) </legend>
		<div class="actions">
			<%= button_to "Search", search_path, :method => 'get' %>
		</div>		
	</fieldset>
</div>
<div class="authentication">
		<% if !session[:id] %>
			<%= link_to "S'authentifier", login_path, :method => 'get', :remote => true %>	
		<% end %>					
		<% if session[:id] %>
			Bienvenue <%= session[:login] %>
			<%= render "logout" %>	
		<% end %>						
</div>
<body>
	<div class="notice"><%= flash[:notice] %></div>
	<HR>
	<div class="title">
		Affichage de la liste des posts 
	</div>
	<ul>
		<%= render "listingpost" %>
	</ul>
	<% if session[:id] %>
		<div class="title">
			Creation d'un nouveau post.
		</div>
		<form action= <%= posts_new_path %> method="GET">
			<div class="needLogin">
				<div class = "actions"><input type="submit" name="CreationPostButton" value="Add New Post" <br></div>
			</div>
		</form> 
	<% end %>	
	<HR>
	<div class="title">
		Utilisateurs
	</div>	
	<div class="actions">
		<%= button_to "Page des utilisateurs", listingPeople_path, :method => 'get' %>
	</div>
</body>
