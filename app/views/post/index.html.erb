<div class="authentication">
		<% if !session[:id] %>
			<%= link_to "S'authentifier", login_path, :method => 'get', :remote => true %>	
		<% end %>					
		<% if session[:id] %>
			Bienvenue <%= session[:login] %>
		<%= render "logout" %>	
		<% end %>						
</div>
<body>
	<p id="notice""><%= flash[:notice] %></p>
	<HR>
	<div class="title">
		Affichage de la liste des posts 
	</div>	
	<ul>
		<% @posts.each do |p| %>
			<div class="listingURl">
				<li><%= link_to "#{p.title}", consult_path(p.id), :id => p.id, :method => "get"%> 
				&nbsp;&nbsp;<q>[Auteur : <%= Person.find_by_id(p.person_id).login %>]</q></li>
			</div>
			<% if session[:id] == p.person_id %>	
				<div class="actions">
   					<%= button_to "Supprimer", delete_path(p.id), :id => p.id , :confirm => 'Confirmer la suppression', :method => :delete, :remote => true %>
   				</div>
   			<% end %><HR>
		<% end %>
	</ul>
	<% if session[:id] %>
		<div class="title">
			Creation d'un nouveau post.
		</div>
		<form action= <%= posts_new_path %> method="GET">
			<div class = "actions"><input type="submit" name="CreationPostButton" value="Add New Post" <br></div>
		</form> 
	<% end %>	
	<HR>
	<div class="title">
		Utilisateurs
	</div>	
	<div class="actions">
		<%= button_to "Page des utilisateurs", listingPeople_path, :method => 'get' %>
	</div>
</body>
