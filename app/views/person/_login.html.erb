<% if !session[:id] %>
	<fieldset>
		<legend> Connexion </legend>
		<form action="/people/connect" method="POST">
			<p>
				Login :
				<input type="text" id="login" name="login" cols="20" /> 
			</p>
			<p>
				Password :
				<input type="password" id="password" name="password" cols="20" />
			</p>	
			<p>
				<%= submit_tag "Connexion" %>
			</p>
		</form>
	</fieldset>
<% end %>

