<!-- L'utilisation des div permettra une mise en page simplifiÃ©e via CSS -->
<body>
	<div class="authentication">
		<% if !session[:id] %>
			<%= link_to "S'authentifier", login_path, :method => 'get', :remote => true %>	
		<% end %>	
	</div>
	<div class="actions">
		<%= button_to "Page d\'accueil", posts_path, :method => "get" %>
	</div>
	<HR>
	<div class="title">
		Affichage des utilisateurs
	</div>

	<% @people.each do |p| %>
		<div class="listing">
			<li> <%= p.firstname %> alias <%= p.login %> </li>
		</div>
	<% end %>
	<HR>
	<div class="title">
		Creation d'un nouvel utilisateur
	</div>
	<div class="actions">
		<%= button_to "Creer un utilisateur", newUser_path, :method => "get" %>
	</div>

<!-- Commentaire -->
</body>  
